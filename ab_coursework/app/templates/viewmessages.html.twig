{% extends 'banner.html.twig' %}
{% block content %}
    <h1>{{ page_heading_1 }}</h1>
    <div id="inner-content-div">
        <p>Here are the latest messages:</p>
        <br>
        <table>
            <tr>
                <th>Source</th>
                <th>Destination</th>
                <th>Received</th>
                <th>Bearer</th>
                <th>Reference</th>
                <th>Message</th>
            </tr>
            {% for message in messages %}
            <tr>
                <td>{{ message.source }}</td>
                <td>{{ message.destination }}</td>
                <td>{{ message.received }}</td>
                <td>{{ message.bearer }}</td>
                <td>{{ message.ref }}</td>
                <td>{{ message.message }}</td>
            </tr>
            {% endfor %}
        </table>
        <hr>
        <a href="{{ path_for('menu') }}">Menu</a>
    </div>
{% endblock %}