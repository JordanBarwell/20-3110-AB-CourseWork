{% extends 'banner.html.twig' %}
{% block content %}
    <h2>{{ page_heading_2 }}</h2>
    <p>{{ page_text }}</p>
    <form action="{{ action }}" method="{{ method }}">
    <fieldset>
        {% if database_error is not empty %}
            <small>{{ database_error }}</small>
            <br>
        {% endif %}
        {% if csrf_error is not empty %}
            <small>{{ csrf_error }}</small>
            <br>
        {% endif %}
        <input type="hidden" name="csrfToken" value="{{ csrf_token }}">
        <label for="username">Username:<small>{{ username_error }}</small></label>
        <input id="username" name="username" type="text" maxlength="26" required>
        <br>
        <label for="password">Password:<small>{{ password_error }}</small></label>
        <input id="password" name="password" type="password" autocomplete="off" minlength="8" maxlength="100" required>
        <br>
        <input type="submit" value="Submit Details">
        <input type="reset" value="Clear Fields">
        </fieldset>
    </form>
    <div id="inner-content-div">
        <a href="{{ path_for('homepage') }}">Home</a>
        <p>Already have an account?</p>
        <a href="{{ path_for('registration') }}">Register</a>
    </div>
{% endblock %}