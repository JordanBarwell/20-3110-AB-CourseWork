{% extends 'banner.html.twig' %}
{% block content %}
    <form>
        <h2>{{ page_heading_2 }}</h2>
        <p>{{ page_text }}</p>
        <fieldset>
            <label for="Username">Enter Username:</label>
            <input id="Username" name="Username" type="text" value="" size="20" maxlength="30">
            <br><br>
            <label for="Password">Enter Password:</label>
            <input id="Password" name="Password" type="password" autocomplete="off" value="" size="20" maxlength="30">
            <br><br>
            <input type="submit" value="Submit Details">
            <input type="reset" value="Clear Fields">
            <br><br>
            <a href="{{ path_for('homepage') }}">Home</a>
            <br><br>
            <p>Already have an account?</p>
            <br>
            <a href={{ path_for('registration')  }}>Register</a>
        </fieldset>
    </form>
{% endblock %}